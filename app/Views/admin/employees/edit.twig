{% extends "admin/layout.twig" %}
{% set title = 'Edit Staff' %}
{% set active = 'staffs' %}

{% block content %}
<div class="container-fluid">
    <h2 class="mb-4">Sửa nhân viên</h2>
    <div class="card">
        <div class="card-header">
            <h5>Sửa nhân viên: {{ staff.name }}</h5>
        </div>
        <div class="card-body">
            <form method="POST" action="/admin/staffs/update/{{ staff.id }}" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="name" class="form-label">Họ và tên</label>
                    <input type="text" class="form-control" id="name" name="name" value="{{ staff.name }}" required>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" name="email" value="{{ staff.email }}" required>
                </div>
                <div class="mb-3">
                    <label for="phone" class="form-label">Số điện thoại</label>
                    <input type="text" class="form-control" id="phone" name="phone" value="{{ staff.phone }}" required>
                </div>
                <div class="mb-3">
                    <label for="address" class="form-label">Địa chỉ</label>
                    <input type="text" class="form-control" id="address" name="address" value="{{ staff.address }}" required>
                </div>
                <div class="mb-3">
                    <label for="birth_date" class="form-label">Ngày sinh</label>
                    <input type="date" class="form-control" id="birth_date" name="birth_date" value="{{ staff.birth_date }}" required>
                </div>
                <div class="mb-3">
                    <label for="gender" class="form-label">Giới tính</label>
                    <select class="form-control" id="gender" name="gender" required>
                        <option value="male" {{ staff.gender == 'male' ? 'selected' : '' }}>Nam</option>
                        <option value="female" {{ staff.gender == 'female' ? 'selected' : '' }}>Nữ</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="role_id" class="form-label">Vai trò</label>
                    <select class="form-control" id="role_id" name="role_id" required>
                        <option value="" selected disabled hidden>-- Chọn vai trò --</option>
                        {% for role in roles %}
                        <option value="{{ role.id }}" {{ staff.role_id == role.id ? 'selected' : '' }}>{{ role.name }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="mb-3">
                    <label for="username" class="form-label">Tên đăng nhập</label>
                    <input type="text" class="form-control" id="username" name="username" value="{{ staff.username }}" required>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Mật khẩu (để trống nếu không đổi)</label>
                    <input type="password" class="form-control" id="password" name="password">
                </div>
                <div class="mb-3">
                    <label for="password_confirmation" class="form-label">Xác nhận mật khẩu</label>
                    <input type="password" class="form-control" id="password_confirmation" name="password_confirmation">
                </div>
                <div class="mb-3">
                    <label for="avatar" class="form-label">Ảnh đại diện (tải lại nếu cần)</label>
                    <input type="file" class="form-control" id="avatar" name="avatar" accept="image/*">
                    <img src="{{ asset('assets/img/staff_img/' ~ staff.avatar) }}" alt="{{ staff.name }}" style="width: 100px; margin-top: 10px;">
                </div>
                <button type="submit" class="btn btn-primary">Cập nhật</button>
            </form>
        </div>
    </div>
</div>
{% endblock %}