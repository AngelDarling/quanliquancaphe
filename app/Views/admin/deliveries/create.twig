{% extends "admin/layout.twig" %}
{% set title = 'Add Delivery' %}
{% set active = 'deliveries' %}

{% block content %}
<div class="container-fluid">
    <h2 class="mb-4">Thêm đơn vận chuyển mới</h2>
    <div class="card">
        <div class="card-header">
            <h5>Thêm đơn vận chuyển</h5>
        </div>
        <div class="card-body">
            <form method="POST" action="/admin/deliveries/store">
                <div class="mb-3">
                    <label for="delivery_provider_id" class="form-label">Nhà vận chuyển</label>
                    <select class="form-control" id="delivery_provider_id" name="delivery_provider_id" required>
                        <option value="" selected disabled hidden>-- Chọn nhà vận chuyển --</option>
                        {% for provider in providers %}
                        <option value="{{ provider.id }}">{{ provider.name }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="mb-3">
                    <label for="address" class="form-label">Địa chỉ giao</label>
                    <input type="text" class="form-control" id="address" name="address" required>
                </div>
                <div class="mb-3">
                    <label for="start_date" class="form-label">Thời gian bắt đầu</label>
                    <input type="date" class="form-control" id="start_date" name="start_date" required>
                </div>
                <div class="mb-3">
                    <label for="completion_date" class="form-label">Thời gian hoàn thành</label>
                    <input type="date" class="form-control" id="completion_date" name="completion_date" required>
                </div>
                <button type="submit" class="btn btn-primary">Thêm</button>
            </form>
        </div>
    </div>
</div>
{% endblock %}