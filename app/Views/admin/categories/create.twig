{% extends 'admin/layouts/main.twig' %}

{% block content %}
	<div class="row">
		<div class="col-12">
			<div class="card mb-4 border-1">
				<div class="card-header pb-0">
					<h4>Thêm danh mục mới</h4>
				</div>
				<div class="card-body px-4 pt-0 pb-2 mb-3">
					{% if error is defined %}
						<div class="alert alert-danger">{{ error }}</div>
					{% endif %}
					<form role="form" method="POST" action="/admin/categories/add" enctype="multipart/form-data">
						<input type="hidden" name="csrf_token" value="{{ csrf_token }}">
						<div class="row">
							<div class="col-md-8">
								Tên danh mục
								<div class="input-group input-group-outline my-2">
									<input required type="text" name="name" class="form-control" value="{{ formValues.name|default('') }}" placeholder="Nhập tên danh mục">
								</div>
							</div>
							<div class="col-md-4">
								Hình ảnh
								<div class="input-group input-group-outline my-2">
									<input type="file" name="image" accept="image/*">
								</div>
							</div>
						</div>
						<div class="col-12 text-center px-3">
							<button type="submit" class="btn btn-lg btn-primary btn-lg w-100 mt-4 mb-0">Thêm</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
